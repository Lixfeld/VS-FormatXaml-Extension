    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>format-xaml</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
