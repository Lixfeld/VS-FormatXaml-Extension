  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FormatXaml\FormatXaml.csproj" />
  </ItemGroup>

</Project>
